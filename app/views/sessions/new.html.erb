<h1 class= "title">User Sign In</h1>

<%= form_with(model: @user, url: login_path) do |form| %>

  <div class="form-input">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="form-input">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <%= form.submit "Login" %>
  
<% end %>