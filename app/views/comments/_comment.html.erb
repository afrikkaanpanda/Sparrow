<li class="list-group-item">
  <p><%= comment.body %></p>
  <small class="small fs-italic">Created by: <%= comment.user.full_name %> on <%= comment.created_at.strftime("%d/%m/%Y") %></small>
  <% if comment.user == current_user %>
    <%= button_to "Delete", [comment.post, comment], method: :delete, class: "btn btn-danger" %>
  <% end %>
</li>

